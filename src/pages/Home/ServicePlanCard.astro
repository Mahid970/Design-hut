---
const { service } = Astro.props;
const { planeName, price, advantages } = service;
---

<div class="card w-80 h-548px bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="font-bold text-2xl text-center mt-4">{planeName}</h2>
    <h1 class="text-4xl font-bold text-center mt-4">${price}</h1>
    <div class="mt-4 mb-12">
      {
        advantages.map((advantage) => (
          <p class="text-center my-6   ">
            <input
              type="checkbox"
              class="checkbox checkbox-xs checkbox-info"
              checked
            />
            {"  "}
            {advantage}
          </p>
        ))
      }
    </div>
    <button class="btn absolute inset-x-6 bottom-6 mt-4 bg-cyan-500 px-8"
      >Select Plan</button
    >
  </div>
</div>
